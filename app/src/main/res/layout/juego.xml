<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/juego"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="90dp">

        <ListView
            android:id="@+id/listCartones"
            android:layout_width="208dp"
            android:layout_height="134dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="377dp" />

        <Spinner
            android:id="@+id/numeros"
            android:layout_width="217dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="240dp" />

        <TextView
            android:id="@+id/aciertos1"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:text="@string/numeroAciertos" />

        <TextView
            android:id="@+id/aciertos2"
            android:layout_width="124dp"
            android:layout_height="74dp"
            android:layout_alignStart="@+id/aciertos1"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="68dp"
            android:text="@string/numeroAciertos" />

        <Button
            android:id="@+id/sacarBola"
            android:layout_width="115dp"
            android:layout_height="76dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="206dp"
            android:text="@string/sacar" />

        <TextView
            android:id="@+id/numeroSacado"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="89dp"
            android:layout_marginLeft="89dp"
            android:layout_marginTop="153dp"
            android:text="@string/numeroSacado" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="179dp"
            android:layout_height="66dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="63dp"
            android:layout_marginLeft="63dp"
            android:layout_marginBottom="119dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>